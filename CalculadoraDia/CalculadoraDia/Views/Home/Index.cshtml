@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Calculadora</h1>
 </div> 

<div align=center>
    </br></br><form method="post">
        @* variáveis auxiliares *@
        <input type="hidden" value="@ViewBag.PrimeiroOperador" name="PrimeiroOperador" />
        <input type="hidden" value="@ViewBag.Operador" name="operador" />
        <input type="hidden" value="@ViewBag.PrimeiroOperando" name="PrimeiroOperando" />
        <input type="hidden" value="@ViewBag.LimpaVisor" name="limpaVisor" />
        <!-- tabela para desenhar a calculadora -->
        <table style="border:1px solid;">
            <!-- apresentação do visor -->
            <tr>
                <td colspan="5"><input name="visor" type="text" value="@ViewBag.Visor" style="height: 50px; width: 309px; text-align: right; font-size:35px;" readonly="readonly" /></td>
            </tr>
            <!-- apresentação dos botões da calculadora nos seguintes quatro tr's -->
            <tr>
                <td><input type="submit" value="7" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="8" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="9" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="÷" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td><!--"±"-->
                <td><input type="submit" value="C" name="botao" class="btn btn-outline-danger" style="height:60px;width:60px; font-size:30px; " /></td>
            </tr>
            <tr>
                <td><input type="submit" value="4" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="5" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="6" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="x" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="⁺∕₋" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="1" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="2" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="3" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="+" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td rowspan="2"><input type="submit" value="=" name="botao" class="btn btn-outline-dark" style="height:122px;width:60px; font-size:25px;" /></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="0" name="botao" class="btn btn-outline-dark" style="height:60px;width:122px; font-size:25px;" /></td>
                <td><input type="submit" value="," name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
                <td><input type="submit" value="-" name="botao" class="btn btn-outline-dark" style="height:60px;width:60px; font-size:25px;" /></td>
            </tr>
        </table>
    </form>
</div>
